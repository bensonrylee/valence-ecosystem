{
  "name": "ui-consistency",
  "description": "Validates dark theme implementation, responsive design, and accessibility standards",
  "tools": ["read_file", "write_file", "search_files", "run_command"],
  "targets": {
    "style_files": ["app/globals.css", "**/*.module.css"],
    "component_files": ["components/**/*.tsx", "app/**/*.tsx"],
    "config_files": ["tailwind.config.js", "lib/design-system.ts", "lib/theme-constants.ts"]
  },
  "design_system": {
    "theme": "dark",
    "colors": {
      "primary": "#2563EB",
      "secondary": "#4F46E5",
      "background": {
        "dark": "#0A0A0A",
        "card": "#111111",
        "glass": "rgba(255, 255, 255, 0.05)"
      }
    },
    "spacing": {
      "grid": 4,
      "units": ["0.25rem", "0.5rem", "1rem", "1.5rem", "2rem", "3rem", "4rem"]
    },
    "animations": {
      "duration": ["150ms", "300ms", "500ms"],
      "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
    }
  },
  "validation_rules": {
    "consistency": {
      "no_mixed_themes": true,
      "use_design_tokens": true,
      "consistent_spacing": true
    },
    "accessibility": {
      "focus_indicators": true,
      "color_contrast": "WCAG_AA",
      "semantic_html": true
    },
    "performance": {
      "smooth_animations": true,
      "reduce_motion_support": true,
      "optimize_images": true
    },
    "responsive": {
      "mobile_first": true,
      "breakpoints": ["sm", "md", "lg", "xl", "2xl"],
      "test_all_sizes": true
    }
  },
  "common_fixes": {
    "theme_inconsistencies": {
      "replace_hardcoded_colors": true,
      "use_css_variables": true,
      "fix_dark_mode_classes": true
    },
    "glass_morphism": {
      "add_backdrop_blur": true,
      "fix_transparency": true,
      "add_borders": true
    },
    "accessibility": {
      "add_focus_rings": true,
      "improve_contrast": true,
      "add_aria_labels": true
    }
  }
}